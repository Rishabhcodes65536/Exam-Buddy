<style>
  :root {
  --bg-light: #f8f9fa;
  --bg-dark: #151923;
  --text-light: #333;
  --text-dark: #f5f5ff;
  --subtext-light: #666;
  --subtext-dark: #c0c0c0;
  --shadow-light: rgba(0, 0, 0, 0.1);
  --shadow-dark: rgba(255, 255, 255, 0.1);
}

.welcome-message {
  background-color: var(--bg-light);
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 0 10px var(--shadow-light);
  transition: background-color var(--trans-dur), box-shadow var(--trans-dur);
}

body:has(.switch__input:checked) .welcome-message {
  /* background-color: var(--bg-dark);
   */
  background-color:#1f2a48;
  box-shadow: 0 0 10px var(--shadow-dark);
}

.welcome-message h2 {
  color: var(--text-light);
  font-size: 34px;
  margin-bottom: 15px;
  transition: color var(--trans-dur);
}

body:has(.switch__input:checked) .welcome-message h2 {
  color: var(--text-dark);
}

.welcome-message p {
  color: var(--subtext-light);
  font-size: 16px;
  margin-bottom: 10px;
  transition: color var(--trans-dur);
}

body:has(.switch__input:checked) .welcome-message p {
  color: var(--subtext-dark);
}

.welcome-message ul {
  margin-bottom: 15px;
  padding-left: 20px;
}

.welcome-message ul li {
  color: var(--subtext-light);
  font-size: 16px;
  list-style-type: disc;
  transition: color var(--trans-dur);
}

body:has(.switch__input:checked) .welcome-message ul li {
  color: var(--subtext-dark);
}

.welcome-message img {
  margin-top: 20px;
  border-radius: 10px;
  box-shadow: 0 0 10px var(--shadow-light);
  transition: box-shadow var(--trans-dur);
}

body:has(.switch__input:checked) .welcome-message img {
  box-shadow: 0 0 10px var(--shadow-dark);
}

.form-outline {
  margin-bottom: 20px;
}

.text-center {
  margin-top: 20px;
}

.big-text p {
  font-size: 20px;
}

.big-text ul li {
  font-size: 20px;
}

.big-text h2 {
  font-size: 30px;
}

/* .beta_container{
  margin-left: 2.3rem;
} */




.error-message {
    color: red;
    font-size: 0.875rem;
}

/* login with google section  */

.login-button {
  display: flex;
  align-items: center;
  gap: 0.5rem; /* Equivalent to gap-2 */
  padding: 0.5rem 1rem; /* Equivalent to px-4 py-2 */
  border: 1px solid #e2e8f0; /* Equivalent to border-slate-200 */
  border-radius: 0.5rem; /* Equivalent to rounded-lg */
  color: #2668d2; /* Equivalent to text-slate-700 */
  transition: all 150ms ease-in-out; /* Equivalent to transition duration-150 */
}

.login-button:hover {
  border-color: #94a3b8; /* Equivalent to hover:border-slate-400 */
  color: #1e293b; /* Equivalent to hover:text-slate-900 */
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Equivalent to hover:shadow */
}

.login-button img {
  width: 1.5rem; /* Equivalent to w-6 */
  height: 1.5rem; /* Equivalent to h-6 */
}

@media (prefers-color-scheme: dark) {
  .container {
    background-color: #1f2937; /* Equivalent to dark:bg-gray-800 */
  }
  .login-button {
    border-color: #334155; /* Equivalent to dark:border-slate-700 */
    color: #e5e7eb; /* Equivalent to dark:text-slate-200 */
  }
  .login-button:hover {
    border-color: #64748b; /* Equivalent to dark:hover:border-slate-500 */
    color: #d1d5db; /* Equivalent to dark:hover:text-slate-300 */
  }
}

/* login with google section ends here  */

</style>
