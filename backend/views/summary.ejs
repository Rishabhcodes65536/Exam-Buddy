<%- include('./partials/header.ejs') %>

<section class="dashboard d-flex">
    <!-- Side Navbar -->
    <%- include('./partials/side_navbar.ejs') %>
    <%- include('./partials/switch.ejs') %>

    <!-- Main Content -->
    <div class="main-content flex-grow-1 d-flex flex-column justify-content-start px-3 px-md-4">
        <!-- Title and Return Button -->
        <div class="container mb-4">
            <div class="row align-items-center">
                <div class="col-12 col-md-auto mb-3 mb-md-0">
                    <a href="/doubt" class="btn btn-secondary w-100 w-md-auto">Return</a>
                </div>
                <div class="col-12 col-md text-center mb-3 mb-md-0">
                    <h2>Summary of Query</h2>
                    <hr class="mb-4">
                </div>
                <div class="col-12 col-md-auto"></div> <!-- Dummy div for spacing -->
            </div>
        </div>

        <!-- Question Card -->
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Question</h5>
                            <p class="card-text"><%= question %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Answer Card -->
        <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Answer</h5>
                            <p class="card-text" id="answerContainer"><%- answer %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Follow Up Question Button -->
        <div class="container mt-4">
            <div class="row justify-content-center">
                <div class="col-12 col-md-6 summ-wrap">
                    <button id="followUpBtn" class="btn btn-primary btn-block mb-3 summ-btn" onclick="window.location.href='#followUpSection'">Ask a Follow Up Question</button>
                    <a href="/doubt" class="btn btn-primary btn-block summ-btn">Ask question from different topic</a>
                </div>
            </div>
        </div>

        <!-- Follow Up Question Section -->
        <div class="container mt-4" id="followUpSection" style="display: none;">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8">
                    <div class="container mt-4">
                        <div class="container">
                            <h5 class="card-title follow-up-title">Follow Up Question</h5>
                            <form id="followUpForm" class="follow-up" action="/doubt?response_type=follow_up" method="POST">
                                <textarea id="followUpQuestion" class="form-control" name="question" rows="4" cols="50" placeholder="Ask follow up question to Exam Buddy" required></textarea>
                                <button class="btn btn-primary btn-block mt-3 summ-btn" type="submit">Submit Follow-up Question</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Toggle visibility of follow-up section
        document.getElementById("followUpBtn").addEventListener("click", function () {
            document.getElementById("followUpSection").style.display = "block";
        });

        // Submit follow-up question using form submission
        document.getElementById("followUpForm").addEventListener("submit", function (event) {
            // Prevent default form submission behavior
            event.preventDefault();

            // Submit the form
            this.submit();
        });
    });
</script>



